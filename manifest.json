
{
  "manifest_version": 3,
  "name": "Page Translator",
  "version": "1.0",
  "description": "Translate webpage content to your preferred language.",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
